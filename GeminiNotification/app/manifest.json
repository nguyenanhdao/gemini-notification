{
  "manifest_version": 2,

  "name": "Hello Wolrd",
  "description": "This is my first Chrome extension.",
  "version": "1.0",

  "permissions": [
    "notifications",
    "storage"
  ],

  "background": {
    "scripts": [ "event-receiver.js" ],
    "persistent":  false
  },

  "options_page":  "options.html",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  }
}